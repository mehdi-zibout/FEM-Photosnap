---
import Check from "./svgs/Check.astro";

const features = [
  {
    title: "UNLIMITED STORY POSTING",
    basic: true,
    pro: true,
    business: true,
  },
  { title: "UNLIMITED PHOTO UPLOAD", basic: true, pro: true, business: true },
  {
    title: "EMBEDDING CUSTOM CONTENT",
    basic: false,
    pro: true,
    business: true,
  },
  { title: "CUSTOMIZE METADATA", basic: false, pro: true, business: true },
  { title: "ADVANCED METRICS", basic: false, pro: false, business: true },
  { title: "PHOTO DOWNLOADS", basic: false, pro: false, business: true },
  {
    title: "SEARCH ENGINE INDEXING",
    basic: false,
    pro: false,
    business: true,
  },
  { title: "CUSTOM ANALYTICS", basic: false, pro: false, business: true },
];
---

<div class="px-8 my-16 tablet:px-10 desktop:px-80 desktop:my-40 tablet:my-28">
  <h3 class="text-center uppercase hidden tablet:block text-h1 mb-14">
    compare
  </h3>
  <div class="pb-6 border-b border-black tablet:flex justify-between">
    <h4
      class="uppercase text-[0.75rem] font-bold tracking-[2px] leading-[15px] w-full"
    >
      THE FEATURES
    </h4>
    <div class="w-full tablet:flex justify-between hidden">
      <h4
        class="tablet:w-full uppercase text-[0.75rem] text-center font-bold tracking-[2px] leading-[15px]"
      >
        basic
      </h4>
      <h4
        class="tablet:w-full uppercase text-center text-[0.75rem] font-bold tracking-[2px] leading-[15px]"
      >
        pro
      </h4>
      <h4
        class="tablet:w-full uppercase text-center text-[0.75rem] font-bold tracking-[2px] leading-[15px]"
      >
        business
      </h4>
    </div>
  </div>
  {
    features.map((feature) => (
      <div class="py-6 border-b border-light-grey tablet:flex tablet:justify-start">
        <h5 class="text-[0.75rem] font-bold tracking-[2px] leading-[15px] w-full">
          {feature.title}
        </h5>
        <ul class="flex justify-between items-start tablet:w-full tablet:text-center">
          <li class="tablet:px-8 tablet:flex justify-center mt-4 tablet:mt-0 uppercase text-black text-opacity-50 text-[0.625rem] font-bold tracking-[1.67px] leading-[13.02px]  tablet:w-full">
            <div class="mb-2 tablet:hidden">basic</div>
            {feature.basic && <Check />}
          </li>
          <li class="tablet:w-full tablet:flex justify-center tablet:px-8  mt-4 tablet:mt-0 uppercase text-black text-opacity-50 text-[0.625rem] font-bold tracking-[1.67px] leading-[13.02px] ">
            <div class="mb-2 tablet:hidden">pro</div>
            {feature.pro && <Check />}
          </li>
          <li class="tablet:w-full tablet:flex justify-center tablet:px-8  tablet:mt-0 uppercase text-black text-opacity-50 text-[0.625rem] font-bold tracking-[1.67px] leading-[13.02px] mt-4">
            <div class="mb-2 tablet:hidden">business</div>
            {feature.business && <Check />}
          </li>
        </ul>
      </div>
    ))
  }
</div>
